<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Bienvenue{% endblock %}</title>
        <link href='{{ asset('logo-eni.png') }}' rel="icon">
        {% block stylesheets %}
            {% stylesheets
                'assets/normalize-css/normalize.css'
                'assets/materialize/dist/css/materialize.css'
                'css/commun.css'
                filter='cssrewrite' output='css/compiled/app.css' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
                <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
                {%  block customCSS %}{% endblock %}
            {% endstylesheets %}
        {% endblock %}
        {% block javascripts %}
            {% javascripts
                'assets/jquery/jquery.js'
                'assets/materialize/dist/js/materialize.js'
                'js/commun.js'
                output='js/compiled/app.js' %}
                <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </head>

    <body>
        <main>
            {% block header %} {% endblock %}
            {% block body %}{% endblock %}
            {% block modal %} {% endblock %}

            <div class="preloader-background" style="display: none">
                <div class="preloader-wrapper active">
                    <div class="spinner-layer spinner-blue-only">
                        <div class="circle-clipper left">
                            <div class="circle"></div>
                        </div><div class="gap-patch">
                            <div class="circle"></div>
                        </div><div class="circle-clipper right">
                            <div class="circle"></div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </body>

    {% block customJS %}{% endblock %}

    <footer class="page-footer">
        {% block footer %}
            {% include ':composants/footer:footer.html.twig' %}
        {% endblock %}
    </footer>
</html>
