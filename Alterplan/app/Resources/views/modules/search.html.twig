<div class="card">
    <div class="card-content custom-padding">
        <span class="card-title">
            Recherche
        </span>
        {{ form_start(formSearch, {'attr' : {'id':'modules_search_form', 'method':'POST'}}) }}
        <div class="valign-wrapper">
            {{ form_label(formSearch.titre, 'Titre', {'label_attr':{'class':'col s2'}}) }}
            {{ form_widget(formSearch.titre, {'attr' : {'class':'col s10'}}) }}
        </div>
        <div class="valign-wrapper">
            {{ form_label(formSearch.formation, 'Formation', {'label_attr':{'class':'col s2'}}) }}
            {{ form_widget(formSearch.formation, {'attr' : {'class':'col s10'}}) }}
        </div>
        <div class="valign-wrapper">
            {{ form_label(formSearch.lieu, 'Lieu', {'label_attr':{'class':'col s2'}}) }}
            {{ form_widget(formSearch.lieu, {'attr' : {'class':'col s10'}}) }}
        </div>
        {{ form_end(formSearch) }}
        <div class="card-action right-align">
            <button type="submit" form="modules_search_form" class="waves-effect waves-light btn">Rechercher</button>
            <button type="reset" form="modules_search_form" class="waves-effect waves-light btn red lighten-3">Effacer
                les crit√®res
            </button>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('select').material_select();
        var frm = $('#modules_search_form');
        frm.submit(function (event) {
            event.preventDefault();
            postForm(frm, postFormSearchSubmit);
        });

        //gestion des boutons hors form pour les navigateurs non-compatibles
        addFormFeature();
    });
</script>