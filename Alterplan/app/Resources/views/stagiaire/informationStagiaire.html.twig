<div class="card">
    <div class="row">
        <h5 class="">Stagiaire</h5>
    </div>
    <div class="row stagiaireInformation">
        <div class="col s4">
            <div class="col s12">
                 <span> Stagiaire : {{ stagiaireParEntreprise.stagiaire.nom }} {{ stagiaireParEntreprise.stagiaire.prenom }} </span>
            </div>
            <div class="col s12">
                <span> adresse : </span> {{ stagiaireParEntreprise.stagiaire.adresse1 }}
            </div>
            <div class="col s12">
                <span>  Code Postal : </span> {{ stagiaireParEntreprise.stagiaire.codePostal }}
            </div>
            <div class="col s12">
                <span> Ville : </span> {{ stagiaireParEntreprise.stagiaire.ville }}
            </div>
            <div class="col s12">
                <span> Téléphone : </span> {{ stagiaireParEntreprise.stagiaire.telephoneFixe }}
            </div>
            <div class="col s12">
                <span> Email : </span> {{ stagiaireParEntreprise.stagiaire.email }}
            </div>
        </div>
        <div class="col s4 formationInformation">
            {% if ( calendarRegistered != null ) %}
                <div class="col s12">
                    <span> Formation : {{ calendarRegistered.formation.codeTitre }} </span>
                </div>
                <div class="col s12">
                    <span> Du </span> {{ calendarRegistered.dateDebut.format('d/m/Y') }}
                </div>
                <div class="col s12">
                    <span> Au </span> {{ calendarRegistered.dateFin.format('d/m/Y') }}
                </div>
            {% else %}
                <div class="col s12">
                    <span>Formation :</span>
                </div>
                <div class="col s12">
                    <span> Du </span>
                </div>
                <div class="col s12">
                    <span> Au </span>
                </div>
            {% endif %}

        </div>
        <div class="col s4 entrepriseInformation">
            <div class="col s12">
                <span> Entreprise : {{ stagiaireParEntreprise.entreprise.raisonsociale }} </span>
            </div>
            <div class="col s12">
                <span> Adresse : </span> {{ stagiaireParEntreprise.entreprise.adresse1 }}
            </div>
            <div class="col s12">
                <span> Ville : </span> {{ stagiaireParEntreprise.entreprise.ville }}
            </div>
            <div class="col s12">
                <span> Code postal : </span> {{ stagiaireParEntreprise.entreprise.codePostal }}
            </div>
            <div class="col s12">
                <span> Téléphone : </span> {{ stagiaireParEntreprise.entreprise.telephone }}
            </div>
            <div class="col s12">
                <span> Email : </span> {{ stagiaireParEntreprise.entreprise.email }}
            </div>
        </div>
    </div>
</div>