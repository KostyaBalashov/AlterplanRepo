<div class="card bloc_calendrier">
    <div class="row calendrierInscrit">
        <div class="col s6">
            <h5> Calendrier Inscrit </h5>
        </div>
        <div class="col s12">
            {% if ( calendarRegistered != null ) %}
                <a href="{{ path('calendrier_edit', { 'codeCalendrier': calendarRegistered.codeCalendrier }) }}">
                    <div class="row ligneInscrit">
                        <div class="col s3">
                            {{ calendarRegistered.titre }}
                        </div>
                        <div class="col s3">
                            {{ calendarRegistered.formation.codeFormation }}
                        </div>
                        <div class="col s3">
                            {% if calendarRegistered.dateDebut %}
                                {{ calendarRegistered.dateDebut.format('d/m/Y') }}
                            {% endif %}
                        </div>
                        <div class="col s3">
                            {% if calendarRegistered.dateFin %}
                                {{ calendarRegistered.dateFin.format('d/m/Y') }}
                            {% endif %}
                        </div>
                    </div>
                </a>
            {% else %}
                {#Message informatif (Aucune donnée)#}
                Aucun calendrier inscrit
            {% endif %}
        </div>
    </div>
    <div class="row">
        <div class="col s6">
            <h5>Liste des calendriers ({{ calendars|length }})</h5>
        </div>
        <div class="col s2 offset-s4">
            <a class='dropdown-button modal-action waves-effect waves-green btn' href='#' data-activates='creerDopDown'>Créer</a>

            {#Dropdown Créer un nouveau calendrier#}
            <ul id='creerDopDown' class='dropdown-content'>
                <li><a id="btn_new">Nouveau</a></li>
                <li><a id="btn_duplicate">Dupliquer</a></li>
                <li><a href="#!">Appliquer un thème</a></li>
            </ul>
        </div>
    </div>

    <table  id="calendar_table" class="centered highlight">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Formation</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Suppression</th>
        </tr>
        </thead>
        <tbody>
        {% if ( calendars != null ) %}
            {% for calendar in calendars %}
                    <tr class="clickable clickable-row-calendar" data-href="{{ path('calendrier_edit', { 'codeCalendrier': calendar.codeCalendrier }) }}">
                        <td>
                            {{ calendar.titre }}
                        </td>

                        <td>
                            {{ calendar.formation.codeFormation }}
                        </td>

                        <td>
                            {{ calendar.dateDebut.format('d/m/Y') }}
                        </td>

                        <td>
                            {{ calendar.dateFin.format('d/m/Y') }}
                        </td>

                        <td>
                            <a href="#">
                                <i class="material-icons deleteIcon" data-href="{{ path('calendar_delete', {'codeCalendrier': calendar.codeCalendrier, "numLien": stagiaireParEntreprise.numLien})}}">delete</i>
                            </a>
                        </td>
                    </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td>
                    Aucun calendrier pour ce stagiaire
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>


<script type="text/javascript">

    $(document).ready(function() {

        $('.clickable-row-calendar td:not(:last-child)').click(function() {
            //Récupération de la ligne contenant l'url cible
            var urlCalendrier = $(this).closest('tr').data("href");
            window.location = urlCalendrier;
        });

        $('.deleteIcon').click(function () {
            var url = $(this).data("href");
            deleteCalendar(url);
        });

        $('#btn_new').click(function () {
            var url = "{{ path('calendrier_new', { 'codeStagiaire' : stagiaireParEntreprise.stagiaire.codeStagiaire}) }}";
            renderModal('calendrier',url,dateCheck);
        });

        var urlDuplicate = "{{ path('calendrier_search')}}";
        $('#btn_duplicate').click(function () {
            renderModal('calendrier_search',urlDuplicate);
        })
    });

    function deleteCalendar(urlAction) {
        showLoader();
        $.ajax({
            url: urlAction,
            type: 'DELETE',
            success: function (data) {
                dismissLoader();
                showToast('Le calendrier a bien été supprimé');
                var calendarTableDiv = $('.bloc_calendrier');
                calendarTableDiv.empty();
                calendarTableDiv.html(data);

            },
            error: function () {
                dismissLoader();
                showToast('Erreur de la suppression', 'error');
            }
        });
    }
    function dateCheck() {

        var debutPicker = $('#appbundle_calendrier_dateDebut').pickadate('picker');
        var finPicker = $('#appbundle_calendrier_dateFin').pickadate('picker');
        var debut = debutPicker.get('select','dd/mm/yyyy');
        var fin = finPicker.get('select','dd/mm/yyyy')

        var partsDebut = debut.split('/');
        var partsFin = fin.split('/');
        var dateDebut = new Date(partsDebut[2],partsDebut[1]-1,partsDebut[0])
        var dateFin = new Date(partsFin[2],partsFin[1]-1,partsFin[0])
        console.debug(partsDebut);
        console.debug(dateDebut);
        console.debug(dateFin);
        $('#appbundle_calendrier_dateFin').pickadate({
            onSet: function () {
                if (dateFin<=dateDebut){
                    console.debug('if');
                    finPicker.get(0).setCustomValidity('La date de fin du calendrier dont être postérieure à sa date de début');
                }else {
                    finPicker.get(0).setCustomValidity('');
                    console.debug('else');
                }
            }
        })
    }
</script>