{% extends 'navigableBase.html.twig' %}

{% block body %}
    <div class="row">
        <div class="card">
            <div class="card-content">
                <h5 class="card-title">Recherche</h5>
                {% block searchPanel %} {% endblock %}
                <div class="card-action right-align">
                    <a class="waves-effect waves-light btn">Rechercher</a>
                    <a class="waves-effect waves-light btn red lighten-3">Effacer les crit√®res</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row center">
        <div class="preloader-wrapper">
            <div class="spinner-layer spinner-blue-only">
                <div class="circle-clipper left">
                    <div class="circle"></div>
                </div><div class="gap-patch">
                    <div class="circle"></div>
                </div><div class="circle-clipper right">
                    <div class="circle"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="card">
            <div class="card-title">
                <h5>{% block resultListTitle %} {% endblock %}</h5>
                <div class="card-action right-align">
                    {% block resultListActionPanel %}{% endblock %}
                </div>
            </div>
            {% block resultRenderer %} {% endblock %}
        </div>
    </div>

{% endblock %}

{% block customJS %}
    {% block searchJS %} {% endblock %}
{% endblock %}