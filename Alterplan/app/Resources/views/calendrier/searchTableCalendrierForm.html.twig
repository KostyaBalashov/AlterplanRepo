<div id="search_calendar_table" class="card-content bloc_calendrier" style="max-height: 19em;overflow-x: auto;">
    <h5 class="card-title">Liste des calendriers ({{ calendars|length }})</h5>

    <table class="centered highlight">
        <thead>
        <tr>
            <th>Titre</th>
            <th>Formation</th>
            <th>Date de début</th>
            <th>Date de fin</th>
        </tr>
        </thead>
        <tbody>
        {% if ( calendars != null ) %}
            {% for calendar in calendars %}
                <tr class="clickable clickable-row-calendar" data-href="">
                    <td>
                        {{ calendar.titre }}
                    </td>

                    <td>
                        {{ calendar.formation.libelleCourt }}
                    </td>

                    <td>
                        {{ calendar.dateDebut.format('d/m/Y') }}
                    </td>

                    <td>
                        {{ calendar.dateFin.format('d/m/Y') }}
                    </td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td>
                    Aucun calendrier répond à cette recherche
                </td>
            </tr>
        {% endif %}
        </tbody>
    </table>
</div>