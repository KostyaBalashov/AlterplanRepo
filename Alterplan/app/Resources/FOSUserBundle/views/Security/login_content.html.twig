<link href="{{ asset('css/FOSUserBundle/Security/login_content.css') }}" rel="stylesheet">
{#{% trans_default_domain 'FOSUserBundle' %}#}


<img class="responsive-img" id="logo_eni" src="{{ asset('logo-eni.png') }}"/>
<div class="section"></div>
<div class="container">
    <div class="z-depth-1 grey lighten-4 row" id="loginPanel">
        <form class="col s12" action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
            {% endif %}
            <div class='row'>
                <div class='col s12'>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">account_circle</i>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                           class="validate"/>
                    <label class="active" for="icon_prefix">login</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">lock</i>
                    <input type="password" id="password" name="_password" required="required" class="validate"/>
                    <label class="active" for="icon_prefix">Mot de passe</label>
                </div>
            </div>
            {# Error login form #}
            {% if error %}
                <div class="alert alert-danger" style="color: red">
                    <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
                </div>
            {% endif %}
            <div class="row">
                <input type="checkbox" id="remember_me" name="_remember_me" checked/>
                <label for="remember_me">Se souvenir de moi</label>
                <label id="forgotten_password">
                    <a href="{{ path('fos_user_resetting_request') }}" class='pink-text'><b>Mot de passe oubli√©?</b></a>
                </label>
            </div>
            <div class="row">
                <button type="submit" id="_submit" name="_submit" class=" col s12 btn btn-large waves-effect indigo">
                    Connexion
                </button>
            </div>
        </form>
    </div>
</div>
<div class="section"></div>





